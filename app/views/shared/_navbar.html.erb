<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= cl_image_tag "logo_final_omhn_epuxv1" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <% if user_signed_in? && @user.admin %>
        <%= link_to "Add Resource", new_resource_path, :class => current_class?(new_resource_path)  %>
        <%= link_to "Add Event", new_event_path , :class => current_class?(new_event_path) %>
      <% end %>
      <%= link_to "Resources", resources_path, :class => current_class?(resources_path)  %>
      <%= link_to "Events", events_path , :class  => current_class?(events_path)  %>
      <%= link_to "Gallery", photos_path, :class => current_class?(photos_path)  %>
      <%= link_to "Contact", contact_path, :class  => current_class?(contact_path) %>
      <%= link_to "About", about_path , :class => current_class?(about_path) %>
      <%= link_to "Profile", dashboard_path, :class => current_class?(dashboard_path) %>
      <!-- Avatar with dropdown menu -->

    <% else %>
      <!-- Login link (when logged out) -->
      <% if user_signed_in? && @user.admin %>
        <%= link_to "Add Resource", new_resource_path, class: "navbar-wagon-item navbar-wagon-link" %>
        <%= link_to "Add Event", new_event_path , class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
      <%= link_to "Resources", resources_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Events", events_path , class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Gallery", photos_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Contact", contact_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "About", about_path , class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Profile", dashboard_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Resources", resources_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Events", events_path , class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Gallery", photos_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Contact", contact_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "About", about_path , class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Profile", dashboard_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
  </div>
</div>

