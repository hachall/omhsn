
<%= link_to resource_path(resource) do %>
  <div class="resource-card">
    <div class="photo-resource-card" style="background-image: url('<%= cl_image_path resource.photo %>')">
    </div>
    <div class="resource-card-details">
      <h2 class="title-resource-card "><%= resource.name %></h2>
      <p class="content-resource-card "><%= resource.card_description %></p>
    </div>
  </div>
<% end %>
