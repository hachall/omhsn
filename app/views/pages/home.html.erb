<div class="container">
  <div class="home-small-container text-center">
    <div class="row">
      <div class="banner">
        <div>
          <%= image_tag "logo.jpeg", class: "big-logo-home" %>
        </div>
        <div class="homepage-description">
          <h1 id="title-homepage" class="text-center">OXFORD MENTAL <br> HEALTH NETWORK</h1>
          <p class="text-center">Helping you find the mental health resources you need.</p>

          <form action="/resources" method="get" class="form-inline">
            <div class="input-group index-search">
              <input type="text" name="query" class="form-control text-center" style="vertical-align: baseline" placeholder="What are you looking for?">
                <span class="input-group-btn index-button">
                  <button type="submit" class="btn btn-default">
                    <i class="fa fa-search"></i>
                  </button>
                </span>
            </div>
          </form>

        </div>
      </div>
    </div>
  </div>


  <h3 class="text-center homepage-titles">Browse by top categories</h3>
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-md-3">
      <div>
        <a href="resources?query=National+Health+Service">
          <div class="category-photo nhs">
          </div>
        </a>
      </div>
      <h4 class="category-title text-center">National Health Service</h4>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3">
      <div>
        <a href="resources?query=Peer+Support+Groups">
          <div class="category-photo psg" data-toggle="tooltip" title="A support group is a meeting of people who are dealing with similar issues in order to provide hope, companionship and non-professional advice." data-placement="top">
          </div>
        </a>
      </div>
      <h4 class="category-title text-center">Peer Support Groups</h4>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3 ">
      <div>
        <a href="resources?query=Self+Help+and+Apps">
          <div class="category-photo self-help">
          </div>
        </a>
      </div>
      <h4 class="category-title text-center">Self-Help and Apps</h4>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3">
      <div >
        <a href="resources?query=Helplines" >
          <div class="category-photo helplines">
          </div>

        </a>
      </div>
      <h4 class="category-title text-center">Helplines</h4>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3 ">
      <div>
        <a href="resources?query=Students">
          <div class="category-photo students">
          </div>
        </a>
      </div>
      <h4 class="category-title text-center">Students</h4>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3 ">
      <div>
        <a href="resources?query=Support+Services">
          <div class="category-photo services">
          </div>
        </a>
      </div>
      <h4 class="category-title text-center">Support Services</h4>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-3 ">
      <div>
        <a href="resources?query=Private+Medical+Services">
          <div class="category-photo medical">
          </div>
        </a>
      </div>
      <h4 class="category-title text-center">Private Medical Services</h4>
    </div>

    <div class="col-xs-12 col-sm-4 col-md-3 emergency">
      <%= link_to emergency_path do %>
        <div class="emergency-homepage category-photo">
        </div>
        <h4 class="category-title text-center">Emergency</h4>
      <% end %>
    </div>

  </div>
    <% if @events.empty? %>
      <div></div>
    <% else %>
      <div class="row">
        <h3 class="text-center homepage-titles">Events in Oxford near you</h3>
        <% @events[0..2].each do |event| %>
          <div class="col-xs-12 col-sm-4">
            <%= render 'events/event_square_card', event: event %>
          </div>
        <% end %>
      </div>

    <% end %>
</div>

<%= content_for(:after_js) do %>
  <script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
  </script>
<% end %>
