<div id="contact" class="resume-wrapper">
  <div class="container">
    <h3 class="text-center">Contact Us</h3>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <form action="https://formspree.io/oxfordmentalhealth@gmail.com" method="POST">
          <div class="form-group">
            <label for="email">What's your name?</label>
            <input type="name" name="name" class="form-control" placeholder="Bob Hall">
          </div>
          <div class="form-group">
            <label for="email">What's your email?</label>
            <input type="email" name="email" class="form-control" placeholder="bob@gmail.com">
          </div>
          <div class="form-group">
            <label for="message">What's your message?</label>
            <textarea name="message" class="form-control" rows="3" placeholder="I can't find the type of resouces I am looking for!"></textarea>
          </div>
          <input type="submit" class="btn btn-primary" value="Submit"> or <a href="mailto:oxfordmentalhealth@gmail.com">drop us a simple email!</a>
        </form>
      </div>
    </div>
  </div>
</div>
