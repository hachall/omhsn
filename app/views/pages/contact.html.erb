<div id="contact" class="resume-wrapper">
  <div class="container">
    <h1 class="text-center contact-title about-color">CONTACT US</h3>
    <div class="row">
      <div class="col-xs-12 col-md-6 col-md-offset-3">
        <form action="https://formspree.io/info@omhn.org" method="POST">
          <div class="form-group">
            <label class="contact-form-labels" for="email">NAME</label>
            <input type="name" name="name" class="form-control" placeholder="Bob Hall">
          </div>
          <div class="form-group">
            <label class="contact-form-labels" for="email">EMAIL</label>
            <input type="email" name="email" class="form-control" placeholder="bob@gmail.com">
          </div>
          <div class="form-group">
            <label class="contact-form-labels" for="message">MESSAGE</label>
            <textarea name="message" class="form-control" rows="3" placeholder="I can't find the type of resources I am looking for..."></textarea>
          </div>
          <input type="submit" class="btn btn-primary btn-color" value="SUBMIT"> or <a href="mailto:oxfordmentalhealth@gmail.com" class="link">drop us an email!</a>
        </form>
      </div>
    </div>
  </div>
</div>
