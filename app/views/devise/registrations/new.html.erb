<div class="container login-height">
  <div class="col-xs-12">
    <div class="login-form signup-login-form">
      <h2 class="login-title-devise text-center">Sign up</h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.label :first_name, :class => "login-devise-inputs" %>
          <%= f.input :first_name, label: false, placeholder: "Your first name" %>
          <%= f.label :last_name, :class => "login-devise-inputs" %>
          <%= f.input :last_name, label: false, placeholder: "Your last name" %>
          <%= f.label :email, :class => "login-devise-inputs" %>
          <%= f.input :email, label: false, required: true, autofocus: true %>
          <%= f.label :password, :class => "login-devise-inputs" %>
          <%= f.input :password, label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
          <%= f.label :password_confirmation, :class => "login-devise-inputs" %>
          <%= f.input :password_confirmation, label: false, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "SIGN UP", class: "button-login" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


