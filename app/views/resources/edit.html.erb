<%= simple_form_for(@resource) do |f| %>
  <%= f.input :name, placeholder: @resource.name %>
  <%= f.input :website, placeholder: @resource.website %>
  <%= f.input :address, placeholder: @resource.address %>
  <%= f.input :phone_number, placeholder: @resource.phone_number %>
  <%= f.input :email, placeholder: @resource.email %>
  <%= f.input :what_they_do, placeholder: @resource.what_they_do %>
  <%= f.input :about, placeholder: @resource.about %>
  <%= f.input :tip, placeholder: @resource.tip %>
  <%= f.input :taglines_as_string, placeholder: @resource.taglines_as_string %>
  <%= f.input :photo%>
  <%= f.input :photo_cache, as: :hidden%>
  <%= f.submit %>
<% end %>
