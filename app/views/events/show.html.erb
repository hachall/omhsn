<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 padded-row">

      <div class="edit-delete-showpage-resource pull-right">
        <% if policy(@event).destroy? %>
          <%= link_to event_path(@event), method: :delete do  %>
            <i class="fa admin-fa fa-trash-o icon-showpage" aria-hidden="true"></i>
          <% end %>
        <% end %>
        <% if policy(@event).edit? %>
          <%= link_to edit_event_path(@event) do  %>
            <i class="fa admin-fa fa-pencil-square-o icon-showpage" aria-hidden="true"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
      <div class="resource-details">
        <div class="photo-showpage" style="background-image: url('<%= cl_image_path @event.photo %>')">
        </div>
        <div class="details-description">
          <h1 class="showpage-title main-title-showpage"><%= @event.name %></h1>
          <% unless @event.address == nil || @event.address == "" %>
            <div class="address">
              <h5 class="show-page-title">ADDRESS</h5>
              <p class="light " ><%= @event.address %></p>
            </div>
          <% end %>
          <div class="contact">
            <h5 class="show-page-title">DATE</h5>
            <p class ="light"><%= @event.date.strftime("%A, %d %b %Y, %l:%M %p") %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2 justifying-text">
      <%= @event.description.html_safe  %>
      <div id="map" class="show-map event-map-showpage" style="width: 100%; height: 400px;" data-markers="<%= @event_coordinates.to_json %>"></div>
    </div>
  </div>
</div>

<%= content_for :after_js do %>
  <%= javascript_pack_tag 'map' %>
<% end %>















